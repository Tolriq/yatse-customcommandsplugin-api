<manifest
    package="tv.yatse.plugin.customcommands.sample"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Do not forget to export the activities. ! -->
        <activity
            android:name=".CCPluginActivity"
            android:exported="true">
        </activity>

        <!--
        Do not forget to export the service.
        android:icon must point to a drawable. Mipmaps are not supported !
        -->
        <service
            android:name=".CCPluginService"
            android:exported="true"
            android:icon="@drawable/ic_plugin_icon"
            android:label="@string/sample_plugin_name"
            tools:ignore="ExportedService">
            <intent-filter>
                <!-- This value is mandatory for Yatse to detect custom commands plugins ! -->
                <action android:name="tv.yatse.plugin.customcommands.PluginService"/>
            </intent-filter>
            <!-- Protocol version, must match the API version you are using ! -->
            <meta-data
                android:name="protocolVersion"
                android:value="1"/>
            <!-- Do not forget to change the unique ID string to a real unique uuid for your plugin ! -->
            <meta-data
                android:name="uniqueId"
                android:value="@string/plugin_unique_id"/>
            <!-- Plugin description ! -->
            <meta-data
                android:name="description"
                android:value="@string/sample_plugin_description"/>
            <!-- Must be set to true as the plugin have to support manual creation of custom commands ! -->
            <meta-data
                android:name="supportAddCustomCommands"
                android:value="true"/>
            <!-- The plugin activity that will be called to add or edit a custom command ! -->
            <meta-data
                android:name="customCommandsActivity"
                android:value=".CCPluginActivity"/>
        </service>
    </application>

</manifest>
